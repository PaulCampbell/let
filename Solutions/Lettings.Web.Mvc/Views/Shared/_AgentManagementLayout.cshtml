<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">

<head id="Head1" runat="server">
    <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1" /> 
    <link href="/Content/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="/Content/prettify.css" rel="stylesheet"> 

    <script type="text/javascript" src="https://www.google.com/jsapi"></script>
    <script src="@Url.Content("/Content/js/jquery-1.6.1.min.js")" type="text/javascript"></script>    
    <script src="@Url.Content("/Content/js/modernizr-1.7.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("/Content/js/prettify.js")"></script> 
    <script src="@Url.Content("/Content/js/application.js")"></script> 
    <!--[if lt IE 9]>
    <script src="//html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    <title>@ViewBag.Title</title>    
</head>

<body>
    


     <div class="topbar">
      <div class="fill">
          @if (ViewBag.ImpersonatedSession)
            {
              
              <div class="alert-message block-message warning">
                <div class="container">
                    Impersonating @ViewBag.ExecutingUser.FullName 
                    @Html.ActionLink("End impersonation", "EndImpersonation", "Authentication", null, new { @class = "btn" })
                </div>
              </div>
            }
        <div class="container">
          <ul><li><h3>@Html.ActionLink("Agency", "Index")</h3></li>
          
            <li>@Html.ActionLink("Properties", "Properties")</li>
            <li>@Html.ActionLink("Landlords", "Landlords")</li>
            <li>@Html.ActionLink("Tenants", "Tenants")</li>
            <li>@Html.ActionLink("Account Management", "Account")</li>
          </ul>

          @if (User.Identity.IsAuthenticated)
          {
          <ul class="nav secondary-nav">
            <li class="menu">
              <strong>@Html.ActionLink("Log out", "Logout","Authentication")</strong>
           
            </li>
          </ul>
          }
        </div>
      </div>
    </div>

    <div class="container" id="top">


          @RenderBody()


      <footer>
        <p>&copy; Us 2011</p>
      </footer>

    </div> <!-- /container -->

 
      
             
</body>
</html>
